{
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    //"editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true, // auto-indent with pylance, v1.75 jan23
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll": false // don't like. import can be removed unpredictably.
    }
  },
  //"ruff.args": [ "--ignore E501" ], // Do not disable line-too-long checks
  "python.linting.mypyEnabled": true, // TODO: migrate to extension

  "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": true, // Extension davidanson.vscode-markdownlint
      "source.organizeImports": true
  },

  // Disable vscode built-in trailing-space trimmer.
  "files.trimTrailingWhitespace": false,

  // Extension: trim trailing-space selectively.
  "trailing-spaces.trimOnSave": true,
  "trailing-spaces.deleteModifiedLinesOnly": true
}
