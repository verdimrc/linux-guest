{
    "python.pythonPath": "/Users/marcverd/miniconda3/envs/py37/bin/python",
    "python.envFile": "${workspaceFolder}/.env",
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
    },

    "files.exclude": {
        "**/._*": true,
        "**/__pycache__": true,
        "**/.ipynb_checkpoint": true,
        "**/.*_cache": true
    },
    "files.watcherExclude": {
        "**/._*": true,
        "**/__pycache__": true,
        "**/.ipynb_checkpoint": true,
        "**/.*_cache": true
    },

    "python.dataScience.ignoreVscodeTheme": true,
    "python.dataScience.searchForJupyter": false,
    "python.dataScience.askForKernelRestart": false,
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": ["--line-length", "120"],
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.nosetestsEnabled": false,

    "breadcrumbs.enabled": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.rulers": [
        80,
        120
    ],
    "editor.suggestSelection": "first",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "window.zoomLevel": -1,

    "terminal.integrated.rendererType": "experimentalWebgl",
    "editor.fontSize": 12,
    "terminal.integrated.fontSize": 12,                                                                                                                                                                           
    "terminal.integrated.lineHeight": 1.2,

    "autoDocstring.docstringFormat": "google",
    "aws.samcli.location": "/usr/local/bin/sam",
    "aws.profile": "default",
    "aws.telemetry": false,
    "gitlens.hovers.currentLine.over": "line",
    "remote.SSH.defaultExtensions": [
        "aaron-bond.better-comments",
        "amazonwebservices.aws-toolkit-vscode",
        "christian-kohler.path-intellisense",
        "DavidAnson.vscode-markdownlint",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "emilast.LogFileHighlighter",
        "GrapeCity.gc-excelviewer",
        "Gruntfuggly.todo-tree",
        "hbenl.vscode-test-explorer",
        "littlefoxteam.vscode-python-test-adapter",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode-remote.remote-containers",
        "njpwerner.autodocstring",
        "phplasma.csv-to-table",
        "redhat.vscode-yaml",
        "shardulm94.trailing-spaces",
        "slevesque.vscode-hexdump",
        "VisualStudioExptTeam.vscodeintellicode",
        "yzhang.markdown-all-in-one"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "opacity": 0,
        "fontStyle": "italic",
        "fontWeight": "bold"
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "foreground": "yellow"
        },
        "FIXME": {
            "foreground": "red"
        }
    },
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
