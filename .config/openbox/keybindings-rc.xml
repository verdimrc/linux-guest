<!-- This only contain custom keybindings. Merge to lxqt-rc.xml -->
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <keyboard>
    <!-- Window snapping: https://gist.github.com/Jasha10/8d985aa421fab053d1a2a0bd2743cf4b -->
    <keybind key="W-Left">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
	<height>100%</height>
	<width>50%</width>
      </action>
    </keybind>
    <keybind key="W-Right">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>-0</x>
        <y>0</y>
	<height>100%</height>
	<width>50%</width>
      </action>
    </keybind>
    <keybind key="W-KP_Left">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
	<height>100%</height>
	<width>1/3</width>
      </action>
    </keybind>
    <keybind key="W-KP_Right">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>-0</x>
        <y>0</y>
	<height>100%</height>
	<width>1/3</width>
      </action>
    </keybind>
    <keybind key="W-KP_5">
      <!-- Centering: https://forums.bunsenlabs.org/viewtopic.php?id=3946 -->
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <x>center</x>
        <y>center</y>
	<height>100%</height>
	<width>1/3</width>
      </action>
    </keybind>
  </keyboard>
  <keybind key="W-KP_Home">
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>0</x>
      <y>0</y>
      <height>100%</height>
      <width>2/3</width>
    </action>
  </keybind>
  <keybind key="W-KP_Prior">
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>-0</x>
      <y>0</y>
      <height>100%</height>
      <width>2/3</width>
    </action>
  </keybind>
  <keybind key="W-KP_End">
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>-1/2</x>
      <y>0</y>
      <height>100%</height>
      <width>1/3</width>
    </action>
  </keybind>
  <keybind key="W-KP_Next">
    <action name="UnmaximizeFull"/>
    <action name="MoveResizeTo">
      <x>1/2</x>
      <y>0</y>
      <height>100%</height>
      <width>1/3</width>
    </action>
  </keybind>
</openbox_config>
